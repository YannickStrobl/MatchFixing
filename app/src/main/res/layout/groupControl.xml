<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#282828"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Maak een nieuw groep aan"
        android:typeface="sans"
        android:textSize="25sp"
        android:textColor="#00aa55"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_above="@+id/linearLayout"
        android:padding="10dp"
        android:id="@+id/createGroupText"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:background="#5d5d5d"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/textCreateGroup"
        android:textSize="15sp"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:id="@+id/btnCreateGroup"
        android:text="@string/CreateGroup"
        android:onClick="group_group"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:padding="13dp"
        android:textColor="#ffffff"
        android:layout_marginTop="50dp"
        android:background="#eee"
        android:layout_alignBottom="@+id/btnProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textCreateGroup" />
</RelativeLayout>